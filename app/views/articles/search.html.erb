<div class="container margin-bottom-10">
  <h3 class="txtcolorw">検索一覧</h3>
  <div class="row bigbox">
    <% @articles.each do |article| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%if article.status_i18n == "非公開" %>
          <div class="secret">
            <i class="fas fa-key">非公開</i>
          </div>
        <%end%>
        <%= link_to article, class:"txtcolorw imgBx" do %>
        <% if article.image.attached? %>
          <%= image_tag article.image, class: "article-img margin-top-5per" %>
        <%else%>
          <%= image_tag 'noimage.jpg', class: 'article-img margin-top-5per' %>
        <%end%>
        <div class="content">
          <div class="title"><%= article.title %></div>
          <div>投稿者：<%= article.user.nickname %></div>
          <span><%= article.created_at.strftime("%Y/%m/%d %H:%M") %></span>
          <i class="fas fa-heart" style="font-size:15px;"><%= article.likes.all.length%></i>
          <i class="fas fa-comment" style="font-size:15px;"><%= article.comments.all.length%></i>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<%= paginate @articles %>

<div class="container margin-bottom-10">
<% if user_signed_in?%>
  <div class="row bigbox">
    <% @articles.each do |article| %>
      <div class="col-xs-12 col-sm-6 col-md-3", id="article-box">
        <%= link_to article, class:"txtcolorw imgBx" do %>
        <% if article.image.attached? %>
          <%= image_tag article.image, class: "article-img margin-top-5per" %>
        <%else%>
          <%= image_tag 'noimage.jpg', class: 'article-img margin-top-5per' %>
        <%end%>
        <div class="content">
          <div class="title moji"><%= article.title %></div>
          <%= article.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
          <br>
          投稿者：<%= article.user.nickname %>
        </div>
        <%= render 'tag_list', tag_list: article.tag_list%>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= link_to "新規作成",new_article_path, class:"margin-top-5per btn btn-primary" %>
  </div>
</div>
<%else%>
  <%= link_to 'ログインしてください！', new_user_session_path, class:"btn btn-warning"%>
<%end%>

<footer>
  <div class="container">
    <div class="row">
      <a href="/top" style="text-decoration:none; color:white;">TOP画面へ</a>
    </div>
  </div>
</footer>
<div class="container">
    <div class="col-md-12 margin-top-5per padding-top-10 article-block margin-bottom-10" id="form-box">
      <h1 class="text-center txtcolorw">ブログの編集</h1>
        <div class="form-group relative", id="image-area">
          <% if @article.image.attached? %>
            <%= image_tag @article.image, class: "show-img" %>
          <%else%>
            <%= image_tag 'noimage.jpg', class: 'show-img' %>
            <i class="far fa-images"></i>
          <%end%>
        </div>
      <div class="padding-bottom-15">
        <%= render 'form', article: @article%>
      </div>
      現在の共有設定：<%= @article.status_i18n %>
      <% if @article.released? %>
        <%= link_to '投稿を非公開にする', unrelease_article_path, method: :patch, class:"btn btn-dark" %>
      <% else %>
        <%= link_to '投稿を共有する', release_article_path, method: :patch, class:"btn btn-info" %>
      <% end %>
    </div>
</div>
